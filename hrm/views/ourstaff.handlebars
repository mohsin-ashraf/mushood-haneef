<div class="container mt-5 pt-5">
  <h1>Employees</h1>
   <div class="row">
    <div class="col-md-3 offset-md-9">
      <input type="text" class="form-control" id="search-bar" placeholder="Search">
    </div>
  </div>
  <table class="table mt-5">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Job Title</th>
        <th>Joining Date</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td>{{_id}}</td>
        <td>{{name}}</td>
        <td>{{jobTitle}}</td>
        <td>{{joiningDate}}</td>
        <td >
          <a href="/delete/{{_id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
          <a href="/training-courses/{{_id}}" class="btn btn-primary"><i class="fas fa-book"></i></a>
          <a href="/reviews/performance" class="btn btn-success"><i class="fas fa-tachometer-alt"></i></a>
          <a href="/course/assign-course/{{_id}}" class="btn btn-dark">Add Course</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>