<div class="container mt-5 pt-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Reviews Given</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Provide Feedback</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div class="row my-3">
      <div class="col-md-3 offset-md-9">
        <input type="text" class="form-control" id="search-bar" placeholder="Search">
      </div>
    </div>
     <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Reviewer</th>
        <th>Employee</th>
        <th>Template</th>
        <th>Status</th>
        <th>Review Date</th>
        <th>Due On</th>
        <th>Start</th>
        <th>End</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each review}}
        <tr>
          <td>{{_id}}</td>
          <td>{{reviewer}}</td>
          <td>{{employee}}</td>
          <td>{{template}}</td>
          <td>{{status}}</td>
          <td>{{reviewDate}}</td>
          <td>{{dueOn}}</td>
          <td>{{start}}</td>
          <td>{{end}}</td>
          <td>
            <a href="/reviews/delete/{{_id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
     <div class="row my-3">
    <div class="col-md-3 offset-md-9">
      <input type="text" class="form-control" id="search-bar" placeholder="Search">
    </div>
  </div>

     <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Review</th>
        <th>Status</th>
        <th>Employee Name</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each feedback}}
      <tr>
        <td>{{_id}}</td>
        <td>{{review}}</td>
        <td>{{status}}</td>
        <td>{{employeeName}}</td>
        <td >
          <a href="/feedback/delete/{{_id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</div>
</div>